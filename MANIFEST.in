include *

exclude .bandit
exclude .bandit.baseline
exclude .coverage
exclude .coveragerc
exclude .gitattributes
exclude .gitcommittemplate.txt
exclude .github_changelog_generator
exclude .gitignore
exclude .isort.cfg
exclude .pre-commit-config.yaml
exclude .pylintrc
exclude .python-version
exclude .travis.yml
exclude appveyor.yml*
exclude coverage.xml
exclude pytest.ini
